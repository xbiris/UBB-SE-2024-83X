<Window x:Class="YourNamespace.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Song Upload Form" Height="200" Width="350">
    <Grid>
        <StackPanel Margin="10">
            <Label Content="Song Name:"/>
            <TextBox x:Name="SongNameTextBox" Width="200" Margin="0 5"/>

            <Button Content="Select File" Click="SelectFile_Click" Width="100"/>
            <TextBox x:Name="FilePathTextBox" IsReadOnly="True" Width="200" Margin="0 5"/>

            <Button Content="Upload" Click="Upload_Click" Width="100"/>
        </StackPanel>
    </Grid>
</Window>
